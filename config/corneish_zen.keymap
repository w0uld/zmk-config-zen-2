#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>    // to enable OUT_USB, OUT_BLE, OUT_TOG
#include <dt-bindings/zmk/pointing.h>   // to enable mouse

/* userspace modules */
#include "zmk-helpers/helper.h"         // https://github.com/urob/zmk-helper
#include "zmk-helpers/key-labels/42.h"  // human readable bindings
#include "resources/z_autoshift.h"      // autoshift

/* layer aliases */
#define QWER  0
#define THSH 1
#define CLMK  2
#define GAME  3
#define MOUS  4
#define NMBR  5
#define NAVI  6
#undef  Z_ALL
#define Z_ALL QWER CLMK GAME NMBR NAVI MOUS THSH

/* timings */
#define _QUIKTAP_MS  250
#define _TAPTERM_MS  200
#define _PRIOR_ZERO  0
#define _PRIOR_IDLE  120
#define _PRIOR_LONG  250
#define _COMBO_SHRT  15
#define _COMBO_MEDM  30
#define _COMBO_LONG  50

/* mouse settings */
#define ZMK_POINTING_DEFAULT_MOVE_VAL 1200  // default: 600
#define ZMK_POINTING_DEFAULT_SCRL_VAL 180   // default: 10

/* adjustments */
&mt {
    quick-tap-ms    = <_QUIKTAP_MS>;
    tapping-term-ms = <_TAPTERM_MS>;
    flavor          = "hold-preferred";  // originally balanced 
    retro-tap       //enabling retro-tap
    ;
};

&lt {
    quick-tap-ms    = <_QUIKTAP_MS>;
    tapping-term-ms = <_TAPTERM_MS>;
    flavor          = "balanced";
    retro-tap       //enabling retro-tap
    ;
};

/* combos; uses https://github.com/urob/zmk-helpers/ */
// syntax: ZMK_COMBO(name, bindings, keypos, layers, timeout, prior_idle, extra)
ZMK_COMBO(combo_esc,          &kp ESC,        LT5 LT4,         Z_ALL,          _COMBO_MEDM, _PRIOR_ZERO)
ZMK_COMBO(combo_enter,        &kp RET,        RB3 RB2 RB1,     Z_ALL,          _COMBO_LONG, _PRIOR_ZERO)
ZMK_COMBO(combo_backslash,    AS(BSLH),       LB5 LB4,         Z_ALL,          _COMBO_MEDM, _PRIOR_IDLE)
ZMK_COMBO(combo_grave,        AS(GRAVE),      LH2 LH1,         Z_ALL,          _COMBO_MEDM, _PRIOR_IDLE)

ZMK_COMBO(combo_studio,       &studio_unlock, LT5 RT5,         Z_ALL,          _COMBO_MEDM, _PRIOR_LONG)
ZMK_COMBO(combo_copy,         &kp LC(INS),    LB4 LB3 LB2,     Z_ALL,          _COMBO_LONG, _PRIOR_IDLE)
ZMK_COMBO(combo_paste,        &kp LS(INS),    LB3 LB2 LB1,     Z_ALL,          _COMBO_LONG, _PRIOR_IDLE)

ZMK_COMBO(combo_locknum0,     &kp KP_NLCK,    RH0 RT5,         Z_ALL,          _COMBO_LONG, _PRIOR_LONG)
ZMK_COMBO(combo_lockcaps,     &kp CLCK,       RH0 RM5,         Z_ALL,          _COMBO_LONG, _PRIOR_LONG)
ZMK_COMBO(combo_lockscrl,     &kp SLCK,       RH0 RB5,         Z_ALL,          _COMBO_LONG, _PRIOR_LONG)

ZMK_COMBO(combo_layerthsh,    &tog THSH,      RH2 LH2 LH1 LH0, Z_ALL,          _COMBO_MEDM, _PRIOR_LONG)
ZMK_COMBO(combo_layerclmk,    &tog CLMK,      RH2 LH1 LH0,     Z_ALL,          _COMBO_MEDM, _PRIOR_LONG)
ZMK_COMBO(combo_layergame,    &tog GAME,      RH2 LH1 LH0,     Z_ALL,          _COMBO_MEDM, _PRIOR_LONG)
ZMK_COMBO(combo_layermous,    &tog MOUS,      RH1 RH2,         Z_ALL,          _COMBO_MEDM, _PRIOR_LONG)

ZMK_COMBO(combo_out_tog,      &out OUT_TOG,   RT0 RB0,         Z_ALL,          _COMBO_LONG, _PRIOR_LONG) // uses outputs.h
ZMK_COMBO(combo_out_usb,      &out OUT_USB,   RT1 RB1,         Z_ALL,          _COMBO_LONG, _PRIOR_LONG) // uses outputs.h
ZMK_COMBO(combo_out_blt,      &out OUT_BLE,   RT2 RB2,         Z_ALL,          _COMBO_LONG, _PRIOR_LONG) // uses outputs.h

ZMK_COMBO(combo_ble_clr,      &bt BT_CLR,     LT0 LB0,         Z_ALL,          _COMBO_LONG, _PRIOR_LONG)
ZMK_COMBO(combo_ble_1,        &bt BT_SEL 0,   LT4 LB4,         Z_ALL,          _COMBO_LONG, _PRIOR_LONG)
ZMK_COMBO(combo_ble_2,        &bt BT_SEL 1,   LT3 LB3,         Z_ALL,          _COMBO_LONG, _PRIOR_LONG)
ZMK_COMBO(combo_ble_3,        &bt BT_SEL 2,   LT2 LB2,         Z_ALL,          _COMBO_LONG, _PRIOR_LONG)
ZMK_COMBO(combo_ble_4,        &bt BT_SEL 3,   LT1 LB1,         Z_ALL,          _COMBO_LONG, _PRIOR_LONG)

ZMK_COMBO(combo_lctrl,        &sk LCTRL,      LM1 LM2 LM3,     QWER THSH CLMK, _COMBO_MEDM, _PRIOR_LONG)
ZMK_COMBO(combo_rctrl,        &sk LCTRL,      RM1 RM2 RM3,     QWER THSH CLMK, _COMBO_MEDM, _PRIOR_LONG)
ZMK_COMBO(combo_lgui,         &sk LGUI,       LM1 LT2 LM3,     QWER THSH CLMK, _COMBO_MEDM, _PRIOR_LONG)
ZMK_COMBO(combo_rgui,         &sk LGUI,       RM1 RT2 RM3,     QWER THSH CLMK, _COMBO_MEDM, _PRIOR_LONG)
ZMK_COMBO(combo_lctrlshft,    &sk LS(LCTRL),  LM1 LM2 LM3 LM4, QWER THSH CLMK, _COMBO_LONG, _PRIOR_LONG)
ZMK_COMBO(combo_rctrlshft,    &sk LS(LCTRL),  RM1 RM2 RM3 RM4, QWER THSH CLMK, _COMBO_LONG, _PRIOR_LONG)
ZMK_COMBO(combo_lguishft,     &sk LS(LGUI),   LM1 LT2 LM3 LM4, QWER THSH CLMK, _COMBO_LONG, _PRIOR_LONG)
ZMK_COMBO(combo_rguishft,     &sk LS(LGUI),   RM1 RT2 RM3 RM4, QWER THSH CLMK, _COMBO_LONG, _PRIOR_LONG)


